<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Activitys.CadImovelActivity"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/tvDsImovel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição do Imóvel"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edtDsImovel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira as caracteristicas do imóvel"
        android:inputType="textMultiLine"
    android:lines="4"
    android:minLines="2"
    android:gravity="top|left"
    android:maxLines="6"
    android:scrollbars="vertical"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/tvDsEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Endereço"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/edtEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o Endereço do imóvel"></EditText>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDsCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Preencha Cidade do Imóvel"
                android:inputType="text"
                tools:layout_editor_absoluteY="1dp" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvDsUF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UF"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnUF"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:autofillHints="Estado"
                android:persistentDrawingCache="none"></Spinner>
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver no Mapa" />
    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnAddEddImovel"
            android:text="Adicionar" />

        <Button
            android:id="@+id/btnCancelImovel"
            android:text="Candelar" />
    </TableRow>


</LinearLayout>
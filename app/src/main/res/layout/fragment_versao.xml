<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin5"
    tools:context=".Fragments.VersaoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNomeVersao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:gravity="center"
            android:text="@string/tvNomeVersao"
            android:textSize="@dimen/font20" />

        <ImageView
            android:id="@+id/ivLogoVersao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/heightLogoVersao"
            android:layout_margin="@dimen/margin5"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvNmDev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:gravity="center"
            android:text="@string/tvNomeDev"
            android:textSize="@dimen/font20" />


        <TextView
            android:id="@+id/tvVersaoApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:gravity="center"
            android:text="@string/tvVersaoAPP"
            android:textSize="@dimen/font20" />


        <TextView
            android:id="@+id/tvCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:gravity="center"
            android:text="@string/tvCall"
            android:textSize="@dimen/font20" />


    </LinearLayout>

</FrameLayout>
</ScrollView>